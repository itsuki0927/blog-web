{
  "name": "blog-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "pm2": "pm2 start yarn --name 'web' --interpreter bash -- start ",
    "next:lint": "next lint",
    "lint": "eslint .",
    "prepare": "husky install",
    "format": "prettier --write . '**/*.{ts,js,tsx,md,scss}'",
    "fix": "eslint --fix .",
    "stylelint-check": "stylelint-config-prettier-check",
    "check-lint": "eslint --fix",
    "check-format": "prettier --check .",
    "check-style": "stylelint --fix '**/*.scss'",
    "check-types": "tsc -p ./tsconfig.json --noEmit --pretty",
    "update:deps": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "dompurify": "^2.3.3",
    "gravatar": "^1.8.2",
    "highlight.js": "^11.3.1",
    "marked": "^3.0.8",
    "next": "^12.0.2-canary.8",
    "next-plugin-preact": "^3.0.6",
    "nprogress": "^0.2.0",
    "preact": "^10.5.15",
    "preact-render-to-string": "^5.1.19",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-slick": "^0.28.1",
    "react-ssr-prepass": "^1.4.0",
    "slick-carousel": "^1.8.1",
    "swr": "^1.0.1",
    "ua-parser-js": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@next/bundle-analyzer": "^12.0.1",
    "@types/dompurify": "^2.3.1",
    "@types/gravatar": "^1.8.3",
    "@types/marked": "^3.0.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.33",
    "@types/react-slick": "^0.23.7",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "4.4.4"
  }
}
